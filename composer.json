{
    "name": "pantheon-systems/terminus-installer",
    "description": "An installer for the Terminus CLI",
    "keywords": ["cli", "pantheon", "terminus", "drupal", "wordpress", "installer"],
    "type": "installer",
    "license": "MIT",
    "homepage": "https://pantheon.io",
    "minimum-stability": "beta",
    "prefer-stable": true,
    "require": {
        "php": ">=5.5.9",
        "composer/composer": "^1.2"
    },
    "autoload": {
        "psr-4": {
          "Pantheon\\TerminusInstaller\\": "src/",
          "Pantheon\\TerminusInstaller\\UnitTests\\": "tests/unit_tests/",
          "Pantheon\\TerminusInstaller\\FeatureTests\\": "tests/features/bootstrap"
        }
    },
    "require-dev": {
        "phpunit/phpcov": "^2.0",
        "phpunit/phpunit": "^4.0",
        "sebastian/phpcpd": "^2.0",
        "squizlabs/php_codesniffer": "^2.7",
        "satooshi/php-coveralls": "^1.0"
    },
    "scripts": {
        "behat": "COMPOSER_PROCESS_TIMEOUT=3600 SHELL_INTERACTIVE=true behat --colors -c=tests/config/behat.yml --suite=default",
        "cbf": "phpcbf --standard=PSR2 -n tests/unit_tests/* src/*",
        "clover": "phpunit -c tests/config/phpunit.xml.dist --coverage-clover tests/logs/clover.xml",
        "coveralls1": "phpunit -c tests/config/phpunit.xml.dist --coverage-clover tests/logs/clover.xml",
        "coveralls": "coveralls -v -c tests/config/coveralls.xml",
        "cs": "phpcs --standard=PSR2 --severity=1 -n tests/unit_tests src",
        "docs": "php scripts/make-docs.php",
        "lint": "@cs",
        "phpunit": "SHELL_INTERACTIVE=true phpunit --colors=always  -c tests/config/phpunit.xml.dist --debug",
        "test": "set -ex ; composer cs ; composer phpunit ; composer behat"
    }
}
